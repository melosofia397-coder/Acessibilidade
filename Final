    <script src="https://cdnjs.cloudflare.com/ajax/libs/scrollReveal.js/4.0.9/scrollreveal.js"></script> <script> document.addEventListener('DOMContentLoaded', function(){ /* Garante que o script só rode após o DOM estar totalmente carregado */
            const botaoDeAcessibilidade = document.getElementById('botao-acessibilidade') /* Seleciona o botão de acessibilidade */
            const opcoesDeAcessibilidade = document.getElementById('opcoes-acessibilidade') /* Seleciona o container das opções */
        
            botaoDeAcessibilidade.addEventListener('click', function (){ /* Adiciona um ouvinte de evento de clique ao botão */
                botaoDeAcessibilidade.classList.toggle('rotacao-botao'); /* Alterna a classe para girar/desgirar o botão */
                opcoesDeAcessibilidade.classList.toggle('apresenta-lista') /* Alterna a classe para mostrar/esconder as opções */
        
                const botaoSelecionado = botaoDeAcessibilidade.getAttribute('aria-expanded') === 'true'; /* Verifica o estado atual do atributo ARIA */
                botaoDeAcessibilidade.setAttribute('aria-expanded', !botaoSelecionado) /* Inverte o estado ARIA para indicar se o menu está expandido */
            
            })
        
            const aumentaFonteBotao = document.getElementById('aumentar-fonte'); /* Seleciona o botão A+ */
            const diminuiFonteBotao = document.getElementById('diminuir-fonte'); /* Seleciona o botão A- */
            
            const alternaContraste = document.getElementById('alterna-contraste') /* Seleciona o botão de contraste */
        
            let tamanhoAtualFonte = 1; /* Inicializa o tamanho da fonte base em 1rem */
        
            aumentaFonteBotao.addEventListener('click', function(){ /* Adiciona ouvinte de clique para aumentar a fonte */
                tamanhoAtualFonte += 0.1; /* Aumenta o valor em 0.1rem */
                document.body.style.fontSize = `${tamanhoAtualFonte}rem` /* Aplica o novo tamanho de fonte ao body */
        
            })
        
            diminuiFonteBotao.addEventListener('click', function(){ /* Adiciona ouvinte de clique para diminuir a fonte */
                tamanhoAtualFonte -= 0.1; /* Diminui o valor em 0.1rem */
                document.body.style.fontSize = `${tamanhoAtualFonte}rem` /* Aplica o novo tamanho de fonte ao body */
        
            })
        
            alternaContraste.addEventListener('click', function(){ /* Adiciona ouvinte de clique para alternar o contraste */
                document.body.classList.toggle('alto-contraste') /* Alterna a classe 'alto-contraste' no body */
            })
        
        
        })
        
        ScrollReveal().reveal('#inicio', { delay: 500 }); /* Configura animação de surgimento para a seção #inicio */
        ScrollReveal().reveal('#tropicalia', { delay: 500 }); /* Configura animação de surgimento para a seção #tropicalia */
        ScrollReveal().reveal('#galeria', { delay: 500 }); /* Configura animação de surgimento para a seção #galeria */
        ScrollReveal().reveal('#contato', { delay: 500 }); /* Configura animação de surgimento para a seção #contato */
    </script> </body> </html> ```
